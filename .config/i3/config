# ------------------------------ 
# Prerequisites:
#
#   - Rofi
#   - i3blocks
#   - alsa-utils
#   - playerctl
#   - betterlockscreen


set $Left   h
set $Down   j
set $Up     k
set $Right  l

set $mod                        Mod1
set $win                        Mod4 

font pango:                     xos4 Terminus 9

floating_modifier               $mod
bindsym $mod+Return             exec termite
bindsym $mod+d                  kill


# ~~~~~~~~~~~~~~~~~~~~~~~~
# Color Scheme 

#to change border color edit $border-color
#to change topbar color edit $main-color
#to change active workspace color edit $accent-color
# ~~~~~~~~~~~~~~~~~~~~~~~~
set $main-color                  #170F0D
set $accent-color                #3f3442
set $border-color                #D5A8E3
set $secondary-color             #ffe4d1
set $text-color                  #d9d6cf
set $faded-text-color            #DDDDDD

# ~~~~
# Rofi
# ~~~~
bindsym $mod+a exec rofi -show drun



# ~~~~~~~~~~~~~~~
# Window Movement
# ~~~~~~~~~~~~~~~
    bindsym $mod+$Left           focus left
    bindsym $mod+$Down           focus down
    bindsym $mod+$Up             focus up
    bindsym $mod+$Right          focus right
    bindsym $mod+Control+$Left   move left
    bindsym $mod+Control+$Down   move down
    bindsym $mod+Control+$Up     move up
    bindsym $mod+Control+$Right  move right


    bindsym $win+h            split v
    bindsym $win+v            split h
    bindsym $mod+f            fullscreen toggle
    # bindsym $mod+t            layout toggle split

    bindsym $mod+Shift+space  floating toggle
    bindsym $mod+space        focus mode_toggle

#---------- 
#   
#   Workspace
#
#---------- 
    

    set $ws1 " 1:web  "
    set $ws2 " 2:>_ "
    set $ws3 " 3:files  "
    set $ws4 " 4:study  "
    set $ws5 " 5:vim "
    set $ws6 " 6:misc  "
    bindsym $mod+1 workspace $ws1
    bindsym $mod+2 workspace $ws2
    bindsym $mod+3 workspace $ws3
    bindsym $mod+4 workspace $ws4
    bindsym $mod+5 workspace $ws5
    bindsym $mod+6 workspace $ws6
    bindsym $mod+Shift+1 move container to workspace $ws1
    bindsym $mod+Shift+2 move container to workspace $ws2
    bindsym $mod+Shift+3 move container to workspace $ws3
    bindsym $mod+Shift+4 move container to workspace $ws4
    bindsym $mod+Shift+5 move container to workspace $ws5
    bindsym $mod+Shift+6 move container to workspace $ws6

# ~~~~~~~~~~~~~~~~
# i3 Configuration
# ~~~~~~~~~~~~~~~~
    bindsym $mod+Shift+c reload
    bindsym $mod+Shift+r restart


# ~~~~~~~~~~~~~~~
# Applying Colors
# ~~~~~~~~~~~~~~~

# Classname                     Border                Background            Text                    Indicator
client.focused                  $main-color           $border-color         $main-color             $border-color
client.unfocused                $main-color           $main-color           $text-color             $main-color
client.focused_inactive         $main-color           $main-color           $text-color             $main-color
client.urgent                   $main-color           $border-color         $secondary-color        $accent-color
bar {
    status_command i3blocks -c ~/.config/i3/i3blocks.conf 
    position top
    font pango:xos4 Terminus, Icons 9
     # tray_output none # uncomment to disable tray icons. Other arguments are: primary/none
     colors {
        background $main-color

        # Property              Border                Background            Text
        focused_workspace       $main-color           $accent-color         $secondary-color
        inactive_workspace      $main-color           $main-color           $text-color
        urgent_workspace        $main-color           $accent-color         $secondary-color
    }
}


# ~~~~~~~~~~~~~~~~~~~~
# custom keybinds and modes
# ~~~~~~~~~~~~~~~~~~~~

bindsym $mod+Shift+$Right workspace next
bindsym $mod+Shift$Left workspace prev


bindsym $mod+e exec pcmanfm # filemanager
# bindsym $mod+r exec termite -e ranger # cli filemanager



# Power menu
set $sysmenu " log[o]ut - po[w]eroff - [r]eboot - [l]ock - [s]uspend"
bindsym $mod+Shift+e      mode $sysmenu

mode $sysmenu {
    bindsym o         exit
    bindsym w         exec "systemctl poweroff"
    bindsym r         exec "systemctl reboot"
    bindsym s         exec "systemctl suspend"
    
    # from: https://github.com/PandorasFox/i3lock-color
    bindsym l         exec "~/.config/i3/lock.sh" 
    bindsym Return    mode "default"
    bindsym Escape    mode "default"
}


# screenshot mode
set $screenshot Launch: [s]crot # Take screenshots: [s]ave locally, [c]opy to clipboard only
bindsym $win+s mode "$screenshot"

mode "$screenshot" {
    bindsym --release s exec "~/.config/i3/screenshotNotfiy.sh"
    bindsym --release c exec "~/.config/i3/screenshotNotfiyClipboard.sh"
    
    bindsym Escape mode "default"
    bindsym Return mode "default"
  }



# Dota2 mode (ignores all other keybinds)
mode  "Dota2" {
        bindsym $mod+Shift+g mode "default"
}
bindsym $mod+Shift+g mode "Dota2"




# easy on the eyes
set $mode_monitor Launch: [m]onitor # [r]edshift, [c]ustom, [q]uit redshift, [j] down brightness, [k] up brightness
bindsym $win+n mode "$mode_monitor"

mode "$mode_monitor" {
    bindsym r exec redshift || redshift -l 47.22:8.33
    bindsym c exec redshift -b .9 -O 4000K
    bindsym q exec redshift -x
    bindsym m exec --no-startup-id xrandr --output VGA1 --mode 1920x1080 --rate 75 --right-of LVDS1 --output LVDS1 --mode 1366x768 --rate 60
    
    bindsym $Up exec xbacklight -inc 5%
    bindsym $Down exec xbacklight -dec 5%
 
    bindsym Escape mode "default"
    bindsym Return mode "default"
  }




# ALSA controls volume
bindsym $win+m exec "amixer -D pulse set Master Playback Switch toggle" 
bindsym $win+$Up exec "amixer set Master 5%+" 
bindsym $win+$Down exec "amixer set Master 5%-" 




# Media Player Controls
bindsym $win+p exec mpc toggle
bindsym $win+$Right exec mpc next
# bindsym $win+$Left exec mpc prev
bindsym $win+Shift+$Right exec mpc seek +5
bindsym $win+Shift+$Left exec mpc seek -5 




# Autostart
exec ~/.config/i3/dbus.sh     # i3 widgets (such as battery status) 
exec_always xrdb ~/.Xresources # needed for rofi launcher
exec xset -b #disable bell sound
exec_always xset -dpms # laptop lid rules
exec_always xset off   # laptop lid rules
exec --no-startup-id pulseeffects --gapplication-service  # equalizer



# Commands for specific windows
# Use `xprop` to search for the window's class value
# These windows won't be focused upon invokcation
for_window [class="^.*"] border pixel 5
for_window [class="^.*"] focus
for_window [class="jetbrains-idea-ce"] move to workspace $ws5
for_window [class="jetbrains-studio"] move to workspace $ws5
for_window [class="libreoffice-writer"] move to workspace $ws6

# for_window [class="Spotify"] move to workspace $ws5
for_window [class="Steam"] move to workspace $ws6
for_window [class="Steam"] no_focus
for_window [class="dota2"] fullscreen enable
# focus_on_window_activation focus

# Make external monitor appear on workspace 6
workspace $ws6 output VGA1

assign [class="Firefox"] $ws1
assign [class="Nightly"] $ws1

assign [class="Ffmulticonverter"] $ws2
assign [class="TelegramDesktop"] $ws2
assign [class="Thunderbird"] $ws2

assign [class="Pcmanfm"] $ws3

assign [class="Zathura"] $ws4
assign [class="Evince"] $ws4
assign [class="Sxiv"] $ws4

assign [class="Code"] $ws5

assign [class="Gnome-twitch"] $ws6
assign [class="TeamSpeak 3"] $ws5
assign [class="mpv"] $ws6
assign [class="libreoffice-startcenter"] $ws6

assign [class="dota2"] $ws6



# i3-gaps
gaps inner 8
gaps outer 1


hide_edge_borders both
